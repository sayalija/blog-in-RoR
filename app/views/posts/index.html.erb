<h1>This is where we have all posts...!</h1>


<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to "Edit", edit_post_path(post) %></td>
      <td><%= link_to "Delete", post_path(post), method: :delete %></td>
    </tr>
  <% end %>
</table>